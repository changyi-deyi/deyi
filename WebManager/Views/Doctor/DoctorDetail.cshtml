@{
    WebManager.Model.DoctorDetail_Model view = new WebManager.Model.DoctorDetail_Model();
    Model.Manage_Model.Doctor_Model model = new Model.Manage_Model.Doctor_Model();
    if (Model != null)
    {
        view = Model;
        if (view.Data != null)
        {
            model = view.Data;
        }

    }
    string host = System.Configuration.ConfigurationManager.AppSettings["Domian"];
}

<script src="/assets/js/ajaxfileupload.js"></script>
<script src="/assets/js/datetime/bs-datepicker.js"></script>
<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
<script type="text/javascript">var txtIntroduction = UE.getEditor('txtIntroduction');</script>
<script src="/Scripts/Doctor.js"></script>
<!DOCTYPE html>
<!--页面主体-->
<div class="page-container">
    <!--左侧菜单-->
    @Html.Partial("Sidebar", 2)
    <!--左侧菜单 结束-->
    <!--右侧主体内容-->
    <div class="page-content">
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <a href="/Doctor/DoctorList">医生</a>
                </li>
                <li class="active">详情</li>
            </ul>
        </div>
        <div class="page-body">
            <div id="popbg" class="modal-backdrop fade" style="display: none;"></div>
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog loading-icon" style="width: 400px; margin-top: 150px;">
                    <img src="/assets/img/loading.gif" />
                </div>
            </div>
            <div class="list-content">
                <div class="form-horizontal">
                    @if (string.IsNullOrEmpty(view.DoctorCode))
                    {
                    <div class="form-group">
                        <label class="col-lg-2 control-label">登陆账号</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入登陆账号" id="txtLoginUserName" value="@(model.LoginUserName)" @(string.IsNullOrEmpty(view.DoctorCode) ? "" : "disabled=disabled") />
                        </div>
                    </div>
                    }
                    @if (!string.IsNullOrEmpty(view.DoctorCode))
                    {
                    <div class="form-group">
                        <label class="col-lg-2 control-label">医生编号</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入医生编号" id="txtDoctorCode" value="@(model.DoctorCode)" @(string.IsNullOrEmpty(view.DoctorCode) ? "" : "disabled=disabled")  />
                        </div>
                    </div>
                    }
                    <div class="form-group">
                        <label class="col-lg-2 control-label">医生名称</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入医生名称" id="txtName" value="@(model.Name)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">性别</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="Gender" value="1" id="radioGender1" @(model.Gender == 1 ? "checked=checked" : "")>
                                <span>男</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="Gender" value="2" id="radioGender2" @(model.Gender == 2 ? "checked=checked" : "")>
                                <span>女</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">生日</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入生日" id="txtBirthday" value="@(string.IsNullOrEmpty(view.DoctorCode) ? "": model.Birthday.ToString("yyyy-MM-dd"))" onclick="laydate({ istime: true, format: 'YYYY-MM-DD' })" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">医院</label>
                        <div class="col-lg-5">
                            <select class="select form-control gh-w-100p col-sm-12" id="ddlHospital">
                                <option value="0">请选择医院</option>
                                @if (view.listHospital != null && view.listHospital.Count > 0)
                                {
                                    foreach (Model.Manage_Model.Hospital_Model item in view.listHospital)
                                    {
                                        <option value="@(item.HospitalID)">@(item.HospitalName)</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">科室</label>
                        <div class="col-lg-5">
                            <select class="select form-control gh-w-100p col-sm-12" id="ddlDepartment">
                                <option value="0">请选择科室</option>
                                @if (view.listDepartment != null && view.listDepartment.Count > 0)
                                {
                                    foreach (Model.Manage_Model.Department_Model item in view.listDepartment)
                                    {
                                        <option value="@(item.DepartmentID)">@(item.DepartmentName)</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">职称</label>
                        <div class="col-lg-5">
                            <select class="select form-control gh-w-100p col-sm-12" id="ddlTitle">
                                <option value="0">请选择职称</option>
                                @if (view.listTitle != null && view.listTitle.Count > 0)
                                {
                                    foreach (Model.Manage_Model.Title_Model item in view.listTitle)
                                    {
                                        <option value="@(item.TitleID)">@(item.TitleName)</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">权重</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入权重" id="txtWeights" value="@(model.Weights)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">擅长</label>
                        <div class="col-lg-5">
                            <textarea class="form-control gh-w-100p" type="text" placeholder="请输入擅长" id="txtGoodAt"  >@(model.GoodAt)</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">简介</label>
                        <div class="col-lg-9">
                            <script id="txtIntroduction" name="content" type="text/plain" style="width: 100%; height: 500px;">
                                @Html.Raw(model.Introduction)
                            </script>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">联系电话</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入联系电话" id="txtPhone" value="@(model.Phone)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">类别</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="Type" value="1" id="radioType1" @(model.Type == 1 ? "checked=checked" : "")>
                                <span>合伙人</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="Type" value="2" id="radioType2" @(model.Type == 2 ? "checked=checked" : "")>
                                <span>服务人</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">状态</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="Status" value="1" id="radioStatus1" @(model.Status == 1 ? "checked=checked" : "")>
                                <span>有效</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="Status" value="2" id="radioStatus2" @(model.Status == 2 ? "checked=checked" : "")>
                                <span>无效</span>
                            </label>
                        </div>
                    </div> 

                    <div class="form-group">
                        <label class="col-lg-2 control-label">标签</label>
                        <div class="col-lg-5" id="divTag">
                            @if (view.listTag != null && view.listTag.Count > 0)
                            {
                                foreach (Model.Manage_Model.Tag_Model item in view.listTag)
                                {
                                    <label class="control-label font-weight-normal margin-right-20">
                                        <input class="margin-right-10" type="checkbox" name="Tag" value="@(item.TagID)"  @(!string.IsNullOrEmpty(item.DoctorCode)? "checked=checked" : "")>
                                        <span>@(item.TagName)</span>
                                    </label>
                                }
                            }
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-md-2 control-label">图片</label>
                        <div class="col-md-9">
                            <div class="databox">
                                <div class="databox-left no-padding margin-right-20 " id="divPic">
                                    <img style="width: 65px; height: 65px;" id="img" src="@(string.IsNullOrEmpty(model.ImageURL) ? "/assets/img/Pic70.png": host+model.ImageURL)" f="@(model.ImageURL)">
                                    @if (!string.IsNullOrEmpty(model.ImageURL))
                                    {
                                        <a class="btn btn-danger btn-xs delete pull-right" style="position:absolute;right:0px;" onclick="deleteImage(this)"><i class="fa fa-trash-o"></i></a>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <input class="input-file pull-left" name="image_file" id="image_file" type="file" style="margin-left:15px;">
                                <a class="btn btn-sm green" onclick="UploadImage()"><i class="fa fa-upload"></i>上传图片</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-7 text-right">
                            <a class=" btn-info btn-lg" onclick=" window.location.href=document.referrer;">返 回</a>
                            @if (ViewBag.Role == 1)
                            {
                            <a class=" btn-blue btn-lg" onclick="operateDoctor('@(view.DoctorCode)',@(model.UserID))">保 存</a>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#ddlHospital").val(@(model.HospitalID));
        $("#ddlDepartment").val(@(model.DepartmentID));
        $("#ddlTitle").val(@(model.TitleID));
    });


    function UploadImage() {
        if ($("#image_file").val() == "") {
            alert("请选择图片");
            return;
        }

        $("#popbg").addClass("in").show();
        $("#myModal").addClass("in").show();
        $.ajaxFileUpload
            (
            {
                url: '/File/FileUpload', //用于文件上传的服务器端请求地址
                data: {

                },
                secureuri: false, //一般设置为false
                fileElementId: 'image_file', //文件上传空间的id属性  <input type="file" id="file" name="file" />
                dataType: 'json', //返回值类型 一般设置为json
                success: function (data)  //服务器成功响应处理函数
                {
                    if (data.Code == "1") {
                        showImage(data.Data, data.FileName);
                        alert("上传成功");
                    } else {
                        alert("上传失败");
                    }
                    $("#popbg").removeClass("in").hide();
                    $("#myModal").removeClass("in").hide();
                },
                error: function (data, status, e)//服务器响应失败处理函数
                {
                    alert(e);
                    $("#popbg").removeClass("in").hide();
                    $("#myModal").removeClass("in").hide();
                }
            }
            );
    }

    function showImage(url, file_name) {
        $("#img").attr("src", url);
        $("#img").attr("f", file_name);
        if ($("#divPic a").size() == 0) {
            $("#divPic").append('<a  class="btn btn-danger btn-xs delete pull-right" style="position:absolute;right:0px; onclick="deleteImage(this)" ><i class="fa fa-trash-o"></i></a>');
        }
    }

    function deleteImage(e) {
        $("#img").attr("f", "");
        $("#img").attr("src", "/assets/img/Pic70.png");
        $(e).remove();
    }
</script>