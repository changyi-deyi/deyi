@{
    ViewBag.Title = "";
    WebManager.Model.MemberActInfoView_Model model = new WebManager.Model.MemberActInfoView_Model();
    if (Model != null)
    {
        model = Model;
    }
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/MemberAct.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 18)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchHandleSts">
                            <option value="0">请选择状态</option>
                            <option value="1">未处理</option>
                            <option value="2">已处理</option>
                        </select>
                    </label>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="SearchInfo(@(model.ID))">搜 索</a>

                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="DownloadMemberActInfo(@(model.ID))">下 载</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-3">
                            <col class="col-lg-3">
                            <col class="col-lg-2">
                            <col class="col-lg-2">
                            <col class="col-lg-2">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>姓名</th>
                                <th>联系电话</th>
                                <th>身份证号码</th>
                                <th>处理状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.MemberActInfo_Model item in model.Data)
                                {
                                    <tr>
                                        <td>@(item.Name)</td>
                                        <td>@(item.Phone)</td>
                                        <td>@(item.IDNumber)</td>
                                        <td>@(item.HandleSts== 1 ? "未处理":"已处理")</td>
                                        <td>
                                            @if (item.HandleSts == 1)
                                            {
                                            <a class="btn-sm btn-red" onclick="updateHandleSts(@(item.ID))">处理</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
        $("#ddlSearchHandleSts").val(@(model.HandleSts));
    });
</script>
