@{
    ViewBag.Title = "活动设置";
    WebManager.Model.MemberActList_Model model = new WebManager.Model.MemberActList_Model();
    if (Model != null)
    {
        model = Model;
    }
    string Domain = System.Configuration.ConfigurationManager.AppSettings["Domian"];
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/MemberAct.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 18)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <a class="btn-yellow pull-right btn-lg margin-right-10" href="/Setting/MemberActDetail">新 增</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-3">
                            <col class="col-lg-2">
                            <col class="col-lg-2">
                            <col class="col-lg-2">
                            <col class="col-lg-3">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>图片</th>
                                <th>名称</th>
                                <th>等级</th>
                                <th>状态</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.MemberAct_Model item in model.Data)
                                {
                                    <tr>
                                        <td>
                                            <img src="@(Domain + item.ImageURL)" style="width:200px;" />
                                        </td>
                                        <td>@(item.Name)</td>
                                        <td>@(item.LevelName)</td>
                                        <td>
                                           @(item.Status == 1 ? "有效" : "无效")
                                        </td>
                                        <td>
                                            <a class="btn-sm btn-green" href="/Setting/MemberActDetail?id=@(item.ID)">修改</a>
                                            @if (item.Status == 1)
                                            {
                                                <a class="btn-sm btn-red" onclick="deleteMemberAct(@(item.ID),2)">删除</a>
                                            }
                                            else
                                            {
                                                <a class="btn-sm btn-red" onclick="deleteMemberAct(@(item.ID),1)">激活</a>
                                            } 
                                            <a class="btn-sm btn-green" href="/Setting/MemberActInfo?id=@(item.ID)">参与情况</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
    });
</script>
