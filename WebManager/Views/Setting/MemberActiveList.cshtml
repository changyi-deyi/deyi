                            <tr>
                                <th>图片</th>
                                <th>名称</th>
                                <th>状态</th>
                                <th>操作</th>
                                <th>排序</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img src="~/assets/img/logo.jpg" style="width:200px;" />
                                </td>
                                <td>名称</td>
                                <td>
                                    <span class="text-green">有效</span>
                                    <span class="gray">无效</span>
                                </td>
                                <td>
                                    <a class="btn-sm btn-green" href="">修改</a>
                                    <a class="btn-sm btn-red" onclick="">删除</a>
                                </td>
                                <td>
                                    <input class="form-control" style="display:inline-block;width:100px" type="text" placeholder="" id="" value="" />
                                    <a class="btn-sm btn-red" onclick="">提交</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
