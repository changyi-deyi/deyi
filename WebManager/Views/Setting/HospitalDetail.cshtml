@{
    WebManager.Model.HospitalDetail_Model view  = new WebManager.Model.HospitalDetail_Model();
    Model.Manage_Model.Hospital_Model model = new Model.Manage_Model.Hospital_Model();
    if (Model != null)
    {
        view = Model;
        if (view.Data != null)
        {
            model = view.Data;
        }

    }
}
<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
<script type="text/javascript">var txtIntroduction = UE.getEditor('txtIntroduction');</script>
<script src="/Scripts/Hospital.js"></script>
<!DOCTYPE html>
<!--页面主体-->
<div class="page-container">
    <!--左侧菜单-->
    @Html.Partial("Sidebar", 7)
    <!--左侧菜单 结束-->
    <!--右侧主体内容-->
    <div class="page-content">
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <a href="/Setting/HospitalList">医院</a>
                </li>
                <li class="active">详情</li>
            </ul>
        </div>
        <div class="page-body">
            <div class="list-content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">医院名称</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入医院名称" id="txtHospitalName" value="@(model.HospitalName)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">介绍</label>
                        <div class="col-lg-5" >
                            <script id="txtIntroduction" name="content" type="text/plain" style="width: 100%; height: 500px;">
                                @Html.Raw(model.Introduction)
                            </script>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-7 text-right">
                            <a class=" btn-info btn-lg" onclick=" window.location.href=document.referrer;">返 回</a>
                            <a class=" btn-blue btn-lg" onclick="operateHospital(@(view.HospitalID))">保 存</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
    });
</script>