@{
    ViewBag.Title = "标签";
    WebManager.Model.BannerList_Model model = new WebManager.Model.BannerList_Model();
    if (Model != null)
    {
        model = Model;
    }
    string Domain = System.Configuration.ConfigurationManager.AppSettings["Domian"];
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Banner.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 12)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchStatus">
                            <option value="0">请选择状态</option>
                            <option value="1">有效</option>
                            <option value="2">无效</option>
                        </select>
                    </label>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="Search()">搜 索</a>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" href="/Setting/BannerDetail">新 增</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-4">
                            <col class="col-lg-1">
                            <col class="col-lg-2">
                            <col class="col-lg-2">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>轮播图</th>
                                <th>状态</th>
                                <th>操作</th>
                                <th>排序</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.Banner_Model item in model.Data)
                                {
                                    <tr>
                                        <td><img src="@(Domain + item.ImageURL)" style="width:300px;" /></td>
                                        <td>@(item.Status == 1 ? "有效" : "无效")</td>
                                        <td>
                                            <a class="btn-sm btn-green" href="/Setting/BannerDetail?id=@(item.ID)">修改</a>
                                            @if (item.Status == 1)
                                            {
                                                <a class="btn-sm btn-red" onclick="deleteBanner(@(item.ID),2)">删除</a>
                                            }
                                            else
                                            {
                                                <a class="btn-sm btn-red" onclick="deleteBanner(@(item.ID),1)">激活</a>
                                            }
                                        </td>
                                        <td>
                                            <input class="form-control" style="display:inline-block;width:100px" type="text" placeholder="" id="txtSort@(item.ID)" value="@(item.Sort)" />
                                            <a class="btn-sm btn-red" onclick="UpdateSort(@(item.ID))">提交</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!--分页-->
                    <div class="row DTTTFooter padding-top-10">
                        <div class="col-sm-6 padding-top-10">
                            <div class="pull-left">
                                <select class="dropdown" style="width: 60px!important;" id="ddlRowsCount" onchange="changeRowCount('@("/Setting/BannerList?s=" + model.Status)')">
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                            </div>
                            <div class="dataTables_info pull-left  margin-left-10" style="padding-top: 6px;">
                                <span class="orange margin-right-5">@(model.TotalCount == 0 ? 0 : model.PageCount)</span>/<span class="margin-left-5 margin-right-5">@(model.TotalPage)</span>,
                                共<span class="margin-left-5 margin-right-5">@(model.TotalCount)</span>条记录
                            </div>
                        </div>
                        <div class="col-sm-6 padding-top-10">
                            <div class="dataTables_paginate paging_bootstrap pull-right">
                                <ul class="pagination">
                                    @if (model.TotalCount > 0)
                                    {
                                        if (model.PageCount == 1)
                                        {
                                            <li class="prev disabled"><a>Prev</a></li>
                                        }
                                        else
                                        {
                                            <li class="prev"><a href="/Setting/BannerList?s=@(model.Status)&rc=@(model.RowsCount)&pc=@(model.PageCount-1)">Prev</a></li>
                                        }

                                        {
                                            int StartCount = 0;
                                            int EndCount = 0;
                                            if (model.TotalPage <= 5 || model.PageCount <= 3)
                                            {
                                                StartCount = 1;
                                                EndCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                                int showPageCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                            }
                                            else
                                            {
                                                if (model.PageCount > model.TotalPage - 2)
                                                {

                                                    StartCount = model.TotalPage - 4;
                                                    EndCount = model.TotalPage;
                                                }
                                                else
                                                {
                                                    StartCount = model.PageCount - 2;
                                                    EndCount = model.PageCount + 2;

                                                }
                                            }

                                            for (var i = StartCount; i <= EndCount; i++)
                                            {
                                                <li @(i == model.PageCount ? "class=active" : "")><a href="/Setting/BannerList?s=@(model.Status)&rc=@(model.RowsCount)&pc=@(i)">@(i)</a></li>
                                            }

                                        }


                                        if (model.PageCount == model.TotalPage)
                                        {
                                            <li class="next disabled"><a>Next</a></li>
                                        }
                                        else
                                        {
                                            <li class="next"><a href="/Setting/BannerList?s=@(model.Status)&rc=@(model.RowsCount)&pc=@(model.PageCount+1)">Next</a></li>
                                        }
                                    }
                                </ul>
                            </div>

                        </div>
                    </div>
                    <!--/ 分页-->
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
        $("#txtHidden").data("PageCount", @(model.PageCount));
        $("#ddlRowsCount").val(@(model.RowsCount));
        $("#ddlSearchStatus").val(@(model.Status));
    });
</script>
