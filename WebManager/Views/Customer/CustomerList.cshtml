@{
    ViewBag.Title = "客户";
    WebManager.Model.CustomerList_Model model = new WebManager.Model.CustomerList_Model();
    if (Model != null)
    {
        model = Model;
    }
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Customer.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 3)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchLevel">
                            <option value="0">请选择会员级别</option>
                            @if (model.listLevel != null && model.listLevel.Count > 0)
                            {
                                foreach (Model.Manage_Model.Level_Model item in model.listLevel)
                                {
                                    <option value="@(item.LevelID)">@(item.Name)</option>
                                }
                            }
                        </select>
                    </label>
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchChannel">
                            <option value="0">请选择来源渠道</option>
                            @if (model.listChannel != null && model.listChannel.Count > 0)
                            {
                                foreach (Model.Manage_Model.Channel_Model item in model.listChannel)
                                {
                                    <option value="@(item.ChannelID)">@(item.ChannelName)</option>
                                }
                            }
                        </select>
                    </label>
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchStatus">
                            <option value="0">请选择状态</option>
                            <option value="1">有效</option>
                            <option value="2">无效</option>
                        </select>
                    </label>
                    <label class="pull-left font-weight-normal margin-right-10">
                        <input class="pull-left form-control no-border-r" type="text" placeholder="按姓名进行搜索" id="txtSearchCustomerName" value="@(model.CustomerName)" />
                    </label>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="Search()">搜 索</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-3">
                            <col class="col-lg-2">
                            <col class="col-lg-1">
                            <col class="col-lg-2">
                            <col class="col-lg-8">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>客户编号</th>
                                <th>姓名</th>
                                <th>会员等级</th>
                                <th>手机号码</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.Customer_Model item in model.Data)
                                {
                                    <tr>
                                        <td>@(item.CustomerCode)</td>
                                        <td>@(item.Name)</td>
                                        <td>@(string.IsNullOrEmpty(item.LevelName) ? "非会员" : item.LevelName)</td>
                                        <td>@(item.Mobile)</td>
                                        <td>
                                            <a class="btn-sm btn-green" href="/Customer/CustomerDetail?cd=@(item.CustomerCode)">详细</a>

                                            @if (ViewBag.Role == 1)
                                            {
                                                if (item.Status == 1)
                                                {
                                                    <a class="btn-sm btn-red" onclick="deleteCustomer(@(item.UserID),'@(item.CustomerCode)',2)">删除</a>
                                                }
                                                else
                                                {
                                                    <a class="btn-sm btn-red" onclick="deleteCustomer(@(item.UserID),'@(item.CustomerCode)',1)">激活</a>
                                                }
                                            }
                                            <a class="btn-sm btn-green" href="/Customer/BalanceList?cd=@(item.CustomerCode)">健康币流水</a>
                                            <a class="btn-sm btn-green" href="/Customer/Document?cd=@(item.CustomerCode)">健康档案</a>
                                            <a class="btn-sm btn-green" href="/Advisory/AdvisoryList?cd=@(item.CustomerCode)">咨询</a>
                                            <a class="btn-sm btn-green" href="/Order/MemberOrderList?cd=@(item.CustomerCode)">会员订单</a>
                                            <a class="btn-sm btn-green" href="/Order/ServiceOrderList?cd=@(item.CustomerCode)">服务订单</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!--分页-->
                    <div class="row DTTTFooter padding-top-10">
                        <div class="col-sm-6 padding-top-10">
                            <div class="pull-left">
                                <select class="dropdown" style="width: 60px!important;" id="ddlRowsCount" onchange="changeRowCount('@("/Customer/CustomerList?s=" + model.Status + "&l=" + model.LevelID + "&c=" + model.ChannelID + "&cn=" + model.CustomerName)')">
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                            </div>
                            <div class="dataTables_info pull-left  margin-left-10" style="padding-top: 6px;">
                                <span class="orange margin-right-5">@(model.TotalCount == 0 ? 0 : model.PageCount)</span>/<span class="margin-left-5 margin-right-5">@(model.TotalPage)</span>,
                                共<span class="margin-left-5 margin-right-5">@(model.TotalCount)</span>条记录
                            </div>
                        </div>
                        <div class="col-sm-6 padding-top-10">
                            <div class="dataTables_paginate paging_bootstrap pull-right">
                                <ul class="pagination">
                                    @if (model.TotalCount > 0)
                                    {
                                        if (model.PageCount == 1)
                                        {
                                            <li class="prev disabled"><a>Prev</a></li>
                                        }
                                        else
                                        {
                                            <li class="prev"><a href="/Customer/CustomerList?s=@(model.Status)&l=@(model.LevelID)&c=@(model.ChannelID)&cn=@(model.CustomerName)&rc=@(model.RowsCount)&pc=@(model.PageCount-1)">Prev</a></li>
                                        }

                                        {
                                            int StartCount = 0;
                                            int EndCount = 0;
                                            if (model.TotalPage <= 5 || model.PageCount <= 3)
                                            {
                                                StartCount = 1;
                                                EndCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                                int showPageCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                            }
                                            else
                                            {
                                                if (model.PageCount > model.TotalPage - 2)
                                                {

                                                    StartCount = model.TotalPage - 4;
                                                    EndCount = model.TotalPage;
                                                }
                                                else
                                                {
                                                    StartCount = model.PageCount - 2;
                                                    EndCount = model.PageCount + 2;

                                                }
                                            }

                                            for (var i = StartCount; i <= EndCount; i++)
                                            {
                                                <li @(i == model.PageCount ? "class=active" : "")><a href="/Customer/CustomerList?s=@(model.Status)&l=@(model.LevelID)&c=@(model.ChannelID)&cn=@(model.CustomerName)&rc=@(model.RowsCount)&pc=@(i)">@(i)</a></li>
                                            }

                                        }


                                        if (model.PageCount == model.TotalPage)
                                        {
                                            <li class="next disabled"><a>Next</a></li>
                                        }
                                        else
                                        {
                                            <li class="next"><a href="/Customer/CustomerList?s=@(model.Status)&l=@(model.LevelID)&c=@(model.ChannelID)&cn=@(model.CustomerName)&rc=@(model.RowsCount)&pc=@(model.PageCount+1)">Next</a></li>
                                        }
                                    }
                                </ul>
                            </div>

                        </div>
                    </div>
                    <!--/ 分页-->
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
        $("#txtHidden").data("PageCount", @(model.PageCount));
        $("#ddlRowsCount").val(@(model.RowsCount));
        $("#ddlSearchStatus").val(@(model.Status));
        $("#ddlSearchChannel").val(@(model.ChannelID));
        $("#ddlSearchLevell").val(@(model.LevelID));
    });
</script>
