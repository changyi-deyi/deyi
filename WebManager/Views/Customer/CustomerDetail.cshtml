@{
    WebManager.Model.CustomerDetail_Model model = new WebManager.Model.CustomerDetail_Model();
    Model.Manage_Model.Customer_Model customer = new Model.Manage_Model.Customer_Model();
    Model.Manage_Model.Member_Model member = new Model.Manage_Model.Member_Model();
    if (Model != null)
    {
        model = Model;
        if (model.Customer != null) {
            customer = model.Customer;
        }
        if (model.Member != null)
        {
            member = model.Member;
        }
    }
}


<!--页面主体-->
<div class="page-container">
    <!--左侧菜单-->
    @Html.Partial("Sidebar", 3)
    <!--左侧菜单 结束-->
    <!--右侧主体内容-->
    <div class="page-content">
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <a href="/Doctor/DoctorList">会员</a>
                </li>
                <li class="active">详情</li>
            </ul>
        </div>

        <div class="page-body">
            <div class="form-group navbar-form">
            </div>

            <div class="row">

                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <!--基本信息-->
                    <div class="well with-header">
                        <div class="header bordered-blue">基本信息</div>
                        <div class="form-horizontal form-bordered">
                            <div class="form-group">
                                <label class="col-sm-3 no-padding text-right">客户编号</label>
                                <div class="col-sm-9">
                                    @(customer.CustomerCode)
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">姓名</label>
                                <div class="col-sm-9">
                                    @(customer.Name)
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">手机号码</label>
                                <div class="col-sm-9">
                                    @(customer.Mobile)
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">性别</label>
                                <div class="col-sm-9">
                                    @(customer.Gender == 1 ? "男": "女")
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">生日</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.Birthday.ToString("yyyy-MM-dd"))
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">健康币余额</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.Balance)
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">是否会员</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.IsMember == 2?"是":"否")
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">身份证号码</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.IDNumber)
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">上次签到日期</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.LastSignInDate == null ? null  : ((DateTime)customer.LastSignInDate).ToString("yyyy-MM-dd")  )
                                </div>
                            </div>
                            <div class="form-group padding-top-10">
                                <label class="col-sm-3 no-padding text-right">状态</label>
                                <div class="col-sm-9" style="word-break: break-all; word-wrap:break-word">
                                    @(customer.Status == 1? "有效":"无效")
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                @if (member != null && !string.IsNullOrEmpty(member.MemberCode))
                { 
                    <!--会员信息-->
                    <div class="col-lg-6 col-sm-6 col-xs-12">
                        <div class="well with-header padding-bottom-10">

                            <div class="header bordered-blue">会员信息</div>
                            <div class="form-horizontal form-bordered">
                                <div class="form-group">
                                    <label class="col-sm-3 no-padding text-right">会员编号</label>
                                    <div class="col-sm-9">
                                        @(member.MemberCode)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">来源渠道</label>
                                    <div class="col-sm-9" id="originCashBalance">
                                        @(member.ChannelName)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">会员级别</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.LevelName)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">会员类型</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.Status == 1 ? "个人会员" : "家庭会员")
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">家庭编号</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.FamilyCode)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">最大人数</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.MaxQty)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">空余人数</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.FreeQty)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">会员到期日</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.ExpiredDate)
                                    </div>
                                </div>
                                <div class="form-group padding-top-10">
                                    <label class="col-sm-3 no-padding text-right">状态</label>
                                    <div class="col-sm-9" id="originCouponBalance">
                                        @(member.Status == 1 ? "有效" : "无效")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script>

</script>