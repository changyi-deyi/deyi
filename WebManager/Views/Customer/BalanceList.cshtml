@{
    ViewBag.Title = "客户";
    WebManager.Model.BalanceList_Model model = new WebManager.Model.BalanceList_Model();
    if (Model != null)
    {
        model = Model;
    }
}

<script src="/assets/js/datetime/bs-datepicker.js"></script>
<script src="/Scripts/Customer.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 3)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        <input class="pull-left form-control no-border-r" type="text" placeholder="开始时间" id="txtSearchSt" value="@(string.IsNullOrEmpty(model.StartDate) ? "": model.StartDate)" onclick="laydate({ istime: true, format: 'YYYY-MM-DD' })" />
                    </label>
                    <label class="pull-left font-weight-normal margin-right-10">
                        <input class="pull-left form-control no-border-r" type="text" placeholder="结束时间" id="txtSearchEt" value="@(string.IsNullOrEmpty(model.EndDate) ? "": model.EndDate)" onclick="laydate({ istime: true, format: 'YYYY-MM-DD' })"  />
                    </label>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="BalanceSearch('@(model.CustomerCode)')">搜 索</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-3">
                            <col class="col-lg-3">
                            <col class="col-lg-3">
                            <col class="col-lg-3">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>入出区分</th>
                                <th>来源/去处</th>
                                <th>变动金额</th>
                                <th>余额</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.Balance_Model item in model.Data)
                                {
                                    <tr>
                                        <td>@(item.InOutType == 1 ? "入":"出")</td>
                                        @switch (item.Type)
                                        {
                                            case 11:
                                                <td>签到</td>
                                                break;
                                            case 12:
                                                <td>生日赠送 </td>
                                                break;
                                            case 13:
                                                <td>消费赠送)</td>
                                                break;
                                            case 14:
                                                <td>完善资料赠送</td>
                                                break;
                                            case 15:
                                                <td>升级会员赠送</td>
                                                break;
                                            case 51:
                                                <td>消费</td>
                                                break;
                                            case 52:
                                                <td>兑换</td>
                                                break;
                                            case 91:
                                                <td>系统扣除 </td>
                                                break;
                                            case 92:
                                                <td>系统返还</td>
                                                break;
                                            default:
                                                <td></td>
                                                break;
                                        }
                                        <td>@(item.ChangeBalance)</td>
                                        <td>@(item.Balance)</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!--分页-->
                    <div class="row DTTTFooter padding-top-10">
                        <div class="col-sm-6 padding-top-10">
                            <div class="pull-left">
                                <select class="dropdown" style="width: 60px!important;" id="ddlRowsCount" onchange="changeRowCount('@("/Customer/BalanceList?cd=" + model.CustomerCode + "&st=" + model.StartDate + "&et=" + model.EndDate)')">
                                    <option value="10">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                            </div>
                            <div class="dataTables_info pull-left  margin-left-10" style="padding-top: 6px;">
                                <span class="orange margin-right-5">@(model.TotalCount == 0 ? 0 : model.PageCount)</span>/<span class="margin-left-5 margin-right-5">@(model.TotalPage)</span>,
                                共<span class="margin-left-5 margin-right-5">@(model.TotalCount)</span>条记录
                            </div>
                        </div>
                        <div class="col-sm-6 padding-top-10">
                            <div class="dataTables_paginate paging_bootstrap pull-right">
                                <ul class="pagination">
                                    @if (model.TotalCount > 0)
                                    {
                                        if (model.PageCount == 1)
                                        {
                                            <li class="prev disabled"><a>Prev</a></li>
                                        }
                                        else
                                        {
                                            <li class="prev"><a href="/Customer/BalanceList?cd=@(model.CustomerCode)&st=@(model.StartDate)&et=@(model.EndDate)&rc=@(model.RowsCount)&pc=@(model.PageCount-1)">Prev</a></li>
                                        }

                                        {
                                            int StartCount = 0;
                                            int EndCount = 0;
                                            if (model.TotalPage <= 5 || model.PageCount <= 3)
                                            {
                                                StartCount = 1;
                                                EndCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                                int showPageCount = model.TotalPage > 5 ? 5 : model.TotalPage;

                                            }
                                            else
                                            {
                                                if (model.PageCount > model.TotalPage - 2)
                                                {

                                                    StartCount = model.TotalPage - 4;
                                                    EndCount = model.TotalPage;
                                                }
                                                else
                                                {
                                                    StartCount = model.PageCount - 2;
                                                    EndCount = model.PageCount + 2;

                                                }
                                            }

                                            for (var i = StartCount; i <= EndCount; i++)
                                            {
                                                <li @(i == model.PageCount ? "class=active" : "")><a href="/Customer/BalanceList?cd=@(model.CustomerCode)&st=@(model.StartDate)&et=@(model.EndDate)&rc=@(model.RowsCount)&pc=@(i)">@(i)</a></li>
                                            }

                                        }


                                        if (model.PageCount == model.TotalPage)
                                        {
                                            <li class="next disabled"><a>Next</a></li>
                                        }
                                        else
                                        {
                                            <li class="next"><a href="/Customer/BalanceList?cd=@(model.CustomerCode)&st=@(model.StartDate)&et=@(model.EndDate)&rc=@(model.RowsCount)&pc=@(model.PageCount+1)">Next</a></li>
                                        }
                                    }
                                </ul>
                            </div>

                        </div>
                    </div>
                    <!--/ 分页-->
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
        $("#txtHidden").data("PageCount", @(model.PageCount));
        $("#ddlRowsCount").val(@(model.RowsCount));
    });
</script>
