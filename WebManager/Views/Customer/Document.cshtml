@{
    ViewBag.Title = "客户";
    WebManager.Model.CustomerProfileList_Model model = new WebManager.Model.CustomerProfileList_Model();
    if (Model != null)
    {
        model = Model;
    }

    string Domain = System.Configuration.ConfigurationManager.AppSettings["Domian"];
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Customer.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 3)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        <select class="pull-left form-control no-border-r" id="ddlSearchVerifyStatus">
                            <option value="0">请选择状态</option>
                            <option value="1">通过</option>
                            <option value="2">未通过</option>
                        </select>
                    </label>
                    <a class="btn-yellow pull-right btn-lg margin-right-10" onclick="SearchDocument('@(model.CustomerCode)')">搜 索</a>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-2">
                            <col class="col-lg-1">
                            <col class="col-lg-7">
                            <col class="col-lg-2">
                        </colgroup>
                        <thead>
                            <tr>
                                <th>日期</th>
                                <th>类型</th>
                                <th>图片</th>
                                <th>审核</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.CustomerProfile_Model profile in model.Data)
                                {

                                    <tr>
                                        <td>@(profile.UploadTime.ToString("yyyy-MM-dd HH:mm"))</td>
                                        @switch (profile.Type)
                                        {
                                            case 1:
                                                <td>体检报告</td>
                                                break;
                                            case 2:
                                                <td>医院病历</td>
                                                break;
                                            case 3:
                                                <td>出院小结</td>
                                                break;
                                            case 4:
                                                <td>影像片子</td>
                                                break;
                                            case 9:
                                                <td>其他</td>
                                                break;
                                            default:
                                                <td></td>
                                                break;
                                        }
                                        <td>
                                            @if (model.listImg != null && model.listImg.Count > 0)
                                            {
                                                List<Model.Manage_Model.CustomerProfileImg_Model> tempImg = model.listImg.Where(x => x.ID == profile.ID).ToList<Model.Manage_Model.CustomerProfileImg_Model>();
                                                if (tempImg != null && tempImg.Count > 0)
                                                {
                                                    foreach (Model.Manage_Model.CustomerProfileImg_Model img in tempImg)
                                                    {
                                                        <a class="margin-bottom-10" style="display:inline-block" onclick="showBigImg('@(Domain + img.FileName)')"><img src="@(Domain + img.FileName)" style="width:110px;" /></a>
                                                    }
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (profile.VerifyStatus == 1)
                                            {
                                                <a class="btn-sm btn-green" onclick="changeVerifyStatus(@(profile.ID),2)">通过</a>
                                                <a class="btn-sm btn-red" onclick="changeVerifyStatus(@(profile.ID),3)">未通过</a>
                                            } else if (profile.VerifyStatus == 2) {
                                                <span>审核通过</span>
                                            }
                                            else if (profile.VerifyStatus == 3)
                                            {
                                                <span>未通过</span>
                                            }

                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
    <!-- 弹层开始  -->
    <div id="mymodal" class="modal " style="display:none;">
        <div class="modal-backdrop" style="background:rgba(255, 255, 255,0.5)"></div>
        <div class="modal-dialog" style="width: 800px;">
            <div class="modal-content">
                <div class="modal-header clearfix">
                    <h4 class="modal-title pull-left">图片</h4>
                    <a class="pull-right close" id="closemymodal"onclick="closeBigImg()"></a>
                </div>
                <div class="modal-body">
                  <img style="width: 100%;" id="imgBigSrc" src="../img/logo2.jpg" />
               </div>
            </div>
        </div>
    </div>
    <!-- / 弹层结束 -->
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
        $("#txtHidden").data("PageCount", @(model.PageCount));
        $("#ddlRowsCount").val(@(model.RowsCount));
        $("#ddlSearchVerifyStatus").val(@(model.VerifyStatus));
    });
</script>
