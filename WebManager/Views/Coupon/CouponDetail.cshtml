@{
    WebManager.Model.CouponDetail_Model view = new WebManager.Model.CouponDetail_Model();
    Model.Manage_Model.Coupon_Model model = new Model.Manage_Model.Coupon_Model();
    if (Model != null)
    {
        view = Model;
        if (view.Data != null)
        {
            model = view.Data;
        }

    }
    string Domain = System.Configuration.ConfigurationManager.AppSettings["Domian"];
}


<script src="/assets/js/ajaxfileupload.js"></script>
<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Coupon.js"></script>
<!--页面主体-->
<div class="page-container">
    <!--左侧菜单-->
    @Html.Partial("Sidebar", 14)
    <!--左侧菜单 结束-->
    <!--右侧主体内容-->
    <div class="page-content">
        <div class="page-breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <a href="/Coupon/CouponList">优惠券</a>
                </li>
                <li class="active">详情</li>
            </ul>
        </div>
        <div class="page-body">
            <div id="popbg" class="modal-backdrop fade" style="display: none;"></div>
            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog loading-icon" style="width: 400px; margin-top: 150px;">
                    <img src="/assets/img/loading.gif" />
                </div>
            </div>
            <div class="list-content">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">名称</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入名称" id="txtName" value="@(model.Name)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">图片</label>
                        <div class="col-md-9">
                            <div class="databox">
                                <div class="databox-left no-padding margin-right-20 " id="divPic">
                                    <img style="width: 65px; height: 65px;" id="img" src="@(string.IsNullOrEmpty(model.ImageURL) ? "/assets/img/Pic70.png": Domain+model.ImageURL)" f="@(model.ImageURL)">
                                    @if (!string.IsNullOrEmpty(model.ImageURL))
                                    {
                                        <a class="btn btn-danger btn-xs delete pull-right" style="position:absolute;right:0px;" onclick="deleteImage(this)"><i class="fa fa-trash-o"></i></a>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <input class="input-file pull-left" name="image_file" id="image_file" type="file" style="margin-left:15px;">
                                <a class="btn btn-sm green" onclick="UploadImage()"><i class="fa fa-upload"></i>上传图片</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">详情</label>
                        <div class="col-lg-5">
                            <textarea class="form-control gh-w-100p" type="text" placeholder="请输入详情" id="txtDetail"  >@(model.Detail)</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">类型</label>
                        <div class="col-lg-5">
                            <select class="select form-control gh-w-100p col-sm-12" id="ddlType">
                                <option value="0">请选择类型</option>
                                <option value="1">现金券</option>
                                <option value="2">满减券</option>
                                <option value="3">打折券</option>
                                <option value="4">兑换券</option>
                            </select>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">规则</label>
                        <div class="col-lg-5">
                            <textarea class="form-control gh-w-100p" type="text" placeholder="请输入规则" id="txtRule">@(model.Rule)</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">可否重复领取</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="IsDuplicate" value="1" id="radioIsDuplicate1" @(model.IsDuplicate == 1 ? "checked=checked" : "")>
                                <span>不可重复领取 </span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="IsDuplicate" value="2" id="radioIsDuplicate2" @(model.IsDuplicate == 2 ? "checked=checked" : "")>
                                <span>可重复领取</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">可否多次使用</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="IsReuse" value="1" id="radioIsReuse1" @(model.IsReuse == 1 ? "checked=checked" : "")>
                                <span>不可</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="IsReuse" value="2" id="radioIsReuse2" @(model.IsReuse == 2 ? "checked=checked" : "")>
                                <span>可</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">兑换方式</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="ExchangeType" value="1" id="radioExchangeType1" @(model.ExchangeType == 1 ? "checked=checked" : "")>
                                <span>系统推送</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="ExchangeType" value="2" id="radioExchangeType2" @(model.ExchangeType == 2 ? "checked=checked" : "")>
                                <span>自己兑换</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">兑换金额</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入兑换金额" id="txtExchangeAmount" value="@(view.ID == 0 ? "" : model.ExchangeAmount.ToString())" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">最大数量</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入最大数量" id="txtMaxQty" value="@(view.ID == 0 ? "" : model.MaxQty.ToString())" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">有效期类型</label>
                        <div class="col-lg-5">
                            <label class="control-label font-weight-normal margin-right-20">
                                <input class="margin-right-10" type="radio" name="ValidType" value="1" id="radioValidType1" @(model.ValidType == 1 ? "checked=checked" : "")>
                                <span>固定期限</span>
                            </label>
                            <label class="control-label font-weight-normal">
                                <input class="margin-right-10" type="radio" name="ValidType" value="2" id="radioValidType2" @(model.ValidType == 2 ? "checked=checked" : "")>
                                <span>领取开始计算</span>
                            </label>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-lg-2 control-label">有效期规则</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入有效期规则" id="txtValidRUle" value="@(model.ValidRUle)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">权重</label>
                        <div class="col-lg-5">
                            <input class="form-control gh-w-100p" type="text" placeholder="请输入权重" id="txtWeights" value="@(view.ID == 0 ? "" : model.Weights.ToString())" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-7 text-right">
                            <a class=" btn-info btn-lg" onclick=" window.location.href=document.referrer;">返 回</a>
                            @if (ViewBag.Role == 1)
                            {
                            <a class=" btn-blue btn-lg" onclick="operateCoupon(@(view.ID))">保 存</a>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>

    $(function () {
        $("#ddlType").val(@(model.Type));
    });


    function UploadImage() {
        if ($("#image_file").val() == "") {
            alert("请选择图片");
            return;
        }

        $("#popbg").addClass("in").show();
        $("#myModal").addClass("in").show();
        $.ajaxFileUpload
            (
            {
                url: '/File/FileUpload', //用于文件上传的服务器端请求地址
                data: {

                },
                secureuri: false, //一般设置为false
                fileElementId: 'image_file', //文件上传空间的id属性  <input type="file" id="file" name="file" />
                dataType: 'json', //返回值类型 一般设置为json
                success: function (data)  //服务器成功响应处理函数
                {
                    if (data.Code == "1") {
                        showImage(data.Data, data.FileName);
                        alert("上传成功");
                    } else {
                        alert("上传失败");
                    }
                    $("#popbg").removeClass("in").hide();
                    $("#myModal").removeClass("in").hide();
                },
                error: function (data, status, e)//服务器响应失败处理函数
                {
                    alert(e);
                    $("#popbg").removeClass("in").hide();
                    $("#myModal").removeClass("in").hide();
                }
            }
            );
    }

    function showImage(url, file_name) {
        $("#img").attr("src", url);
        $("#img").attr("f", file_name);
        if ($("#divPic a").size() == 0) {
            $("#divPic").append('<a  class="btn btn-danger btn-xs delete pull-right" style="position:absolute;right:0px; onclick="deleteImage(this)" ><i class="fa fa-trash-o"></i></a>');
        }
    }

    function deleteImage(e) {
        $("#img").attr("f", "");
        $("#img").attr("src", "/assets/img/Pic70.png");
        $(e).remove();
    }
</script>
</script>