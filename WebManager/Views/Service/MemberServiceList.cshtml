@{
    ViewBag.Title = "服务";
    WebManager.Model.MemberServiceList_Model model = new WebManager.Model.MemberServiceList_Model();
    if (Model != null)
    {
        model = Model;
    }
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Service.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 16)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">
                        @(model.Name)
                </label>
            </div>
            <div id="data-table" class="list-content">
                <table class="table table-striped table-hover">
                    <colgroup class="row">
                        <col class="col-lg-6">
                        <col class="col-lg-6">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>
                                <span>会员名称</span>
                            </th>
                            <th>
                                <span>折扣</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="tbBody">
                        @if (model.Data != null && model.Data.Count > 0)
                        {
                            foreach (Model.Manage_Model.MemberService_Model item in model.Data)
                            {
                                <tr>
                                    <td>
                                        <span>@(item.LevelName)</span>
                                    </td>
                                    <td>
                                        <input class="form-control" value="@(item.ID > 0 ? item.Discount.ToString() : "")" />
                                        <a class="btn-sm btn-blue btn-lg" onclick="OperateMemberService(this,@(item.ID), '@(model.ServiceCode)',@(item.LevelID))">修改</a>
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
    <!--datacontent end-->
</div>
<!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
    });
</script>
