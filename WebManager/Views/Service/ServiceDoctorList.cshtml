@{
    ViewBag.Title = "服务";
    WebManager.Model.ServiceDoctorList_Model model = new WebManager.Model.ServiceDoctorList_Model();
    if (Model != null)
    {
        model = Model;
    }
}

<script src="/Scripts/Common.js"></script>
<script src="/Scripts/Service.js"></script>
<!-- 主要容器 -->
<div class="main-container container-fluid">
    <!-- Page Container -->
    <div class="page-container">
        <!-- 侧边导航 -->
        @Html.Partial("Sidebar", 16)
        <!-- /侧边导航 -->
        <!--右侧主体内容-->
        <div class="page-content">
            <div class="page-body">
                <div class="search-area clearfix">
                    <label class="pull-left font-weight-normal margin-right-10">@(model.Name)
                    </label>
                </div>
                <div id="data-table" class="list-content">
                    <table class="table table-striped table-hover">
                        <colgroup class="row">
                            <col class="col-lg-6">
                            <col class="col-lg-6">
                        </colgroup>
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="doctorAll" onclick="SelectAll('doctor')">
                                    <span>医生名称</span>
                                   </th>
                                <th>
                                    <input type="checkbox" id="IsBargain" @(model.IsBargain == 1 ? "checked=checked" : "") onclick="changeBargain()">
                                    <span>是否议价</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tbBody">
                            @if (model.Data != null && model.Data.Count > 0)
                            {
                                foreach (Model.Manage_Model.ServiceDoctor_Model item in model.Data)
                                {
                                    <tr>
                                        <td><input type="checkbox" value="@(item.DoctorCode)" name="doctor" @(!string.IsNullOrEmpty(item.ServiceCode) ? "checked=checked" : "") >
                                            <span>@(item.DoctorName)</span></td>
                                        <td>
                                        <span name="Bargain"  @(model.IsBargain != 1 ? "style=display:none;" : "") >议价</span>
                                            <input class="form-control gh-w-100p"  @(model.IsBargain != 2 ? "style=display:none;" : "")  name="price" value="@(!string.IsNullOrEmpty(item.ServiceCode) ? item.Price.ToString() : "")" />
                                        </td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="form-group">
                        <div class="col-lg-7 text-right">
                            <a class=" btn-info btn-lg" onclick=" window.location.href=document.referrer;">返 回</a>
                            <a class=" btn-blue btn-lg" onclick="operateServiceDoctor('@(model.ServiceCode)')">保 存</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--datacontent end-->
    </div>
    <!--右侧主体内容 结束-->
</div>
</div>

<input type="hidden" id="txtHidden" />
<script>
    $(function () {
    });
</script>
